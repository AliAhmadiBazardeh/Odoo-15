<odoo>
    <!-- Tree View -->
    <record id="view_estate_property_tree" model="ir.ui.view">
        <field name="name">estate.property.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="Estate Properties"
                  decoration-success="state == 'new'"
                  decoration-danger="state == 'sold'">
                <field name="name"/>
                <field name="property_type_id"/>
                <field name="buyer_id"/>
                <field name="sale_person_id"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="garden_area"/>
                <field name="total_area"/>
                <field name="date_availability"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="best_offer"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_estate_property_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Estate Property" class="o_form_sheet_bg">
                <header>
                    <button class="btn btn-danger" icon="fa-check" name="action_sold" type="object" string="Sold"/>
                    <button class="btn btn-warning" name="action_cancel" type="object" string="Cancel"/>
                </header>
                <sheet>
                    <h1>
                        <field name="name"/>
                    </h1>
                    <div class="row">
                        <div class="col-md-6">
                            <field name="tag_ids" widget="many2many_tags"/>

                            <group>
                                <field name="property_type_id"/>
                                <field name="postcode"/>
                                <field name="date_availability"/>
                            </group>
                        </div>
                        <div class="col-md-6">
                            <group>


                                <field name="expected_price"/>
                                <field name="best_offer"/>
                                <field name="selling_price"/>
                                <field name="state"/>
                            </group>
                        </div>
                    </div>
                    <notebook>
                        <page string="Description">
                            <h3>
                                <field name="description"/>
                            </h3>
                            <group>
                                <field name="living_area"/>
                                <field name="garden"/>
                                <field name="garden_orientation"/>
                                <field name="garden_area"/>
                                <field name="total_area"/>

                            </group>
                        </page>
                        <page string="Offers">
                            <field name="offer_ids">
                                <tree>
                                    <field name="price"/>
                                    <field name="partner_id"/>
                                    <field name="validity"/>
                                    <field name="date_deadline"/>
                                    <button name="action_confirm" type="object"
                                            icon="fa-check" title="confirm"/>
                                    <button name="action_refuse" type="object"
                                            icon="fa-times" title="refuse"/>
                                    <field name="status"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Details">
                            <group class="col-6">
                                <field name="buyer_id"/>
                                <field name="sale_person_id"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Window Action -->
    <record id="action_estate_property" model="ir.actions.act_window">
        <field name="name">Estate Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_estate_property_tree"/>
    </record>
</odoo>