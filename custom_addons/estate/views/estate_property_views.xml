<odoo>
    <record id="view_estate_property_search" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="postcode"/>
                <field name="living_area" filter_domain="[('living_area', '>=', self)]"/>
                <filter name="available" string="Available" domain="[('state', '!=', 'sold')]"/>
            </search>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_estate_property_tree" model="ir.ui.view">
        <field name="name">estate.property.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="Estate Properties"
                  decoration-success="state == 'new'"
                  decoration-danger="state == 'sold'">
                <field name="name"/>
                <field name="property_type_id"/>
                <field name="buyer_id"/>
                <field name="sale_person_id"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="garden_area"/>
                <field name="total_area"/>
                <field name="date_availability" optional="hide"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="best_offer"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_estate_property_kanban" model="ir.ui.view">
        <field name="name">estate.property.kanban</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <field name="name"/>
                        </div>
                        <div t-if="record.state.raw_value == 'new'">
                            This is new!
                        </div>
                    </t>
                </templates>
            </kanban>

        </field>
    </record>


    <!-- Form View -->
    <record id="view_estate_property_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Estate Property">
                <header>
                    <button class="btn btn-danger"
                            icon="fa-check"
                            name="action_sold"
                            type="object"
                            string="Sold"
                            states="offer_accepted"
                    />
                    <button class="btn btn-warning"
                            name="action_cancel"
                            type="object"
                            string="Cancel"
                            states="new,offer_received,offer_accepted"
                    />
                    <field name="state" widget="statusbar"
                           statusbar_visible="new,offer_received,offer_accepted,sold,canceled"/>
                </header>
                <sheet>
                    <h1>
                        <field name="name"/>
                    </h1>
                    <div class="row">
                        <div class="col-md-6">
                            <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>

                            <group>
                                <field name="property_type_id" options="{'no_create':True, 'no_open':True}"/>
                                <field name="postcode"/>
                                <field name="date_availability"/>
                            </group>
                        </div>
                        <div class="col-md-6">
                            <field name="feature_ids" widget="many2many_tags"/>

                            <group>


                                <field name="expected_price"/>
                                <field name="best_offer"/>
                                <field name="selling_price"/>
                            </group>
                        </div>
                    </div>
                    <notebook>
                        <page string="Description">
                            <h3>
                                <field name="description"/>
                            </h3>
                            <group>
                                <field name="living_area"/>
                                <field name="garden"/>
                                <field name="garden_orientation"
                                       attrs="{'invisible': [('garden', '=', False)]}"
                                />
                                <field name="garden_area"
                                       attrs="{'invisible': [('garden', '=', False)]}"
                                />
                                <field name="total_area"/>

                            </group>
                        </page>
                        <page string="Offers">
                            <field name="offer_ids"
                                   attrs="{'readonly': ['|','|',('state', '=' , 'sold'),('state', '=' , 'canceled'),('state', '=' , 'offer_accepted')]}">
                                <tree editable="1">
                                    <field name="price"/>
                                    <field name="partner_id"/>
                                    <field name="validity"/>
                                    <field name="date_deadline"/>
                                    <button name="action_confirm" type="object"
                                            icon="fa-check" title="confirm"
                                            attrs="{'invisible': [('status', '!=', False)]}"
                                    />
                                    <button name="action_refuse" type="object"
                                            icon="fa-times" title="refuse"
                                            attrs="{'invisible': [('status', '!=', False)]}"
                                    />
                                    <field name="status"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Details">
                            <group class="col-6">
                                <field name="buyer_id"/>
                                <field name="sale_person_id"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Window Action -->
    <record id="action_estate_property" model="ir.actions.act_window">
        <field name="name">Estate Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="view_id" ref="view_estate_property_kanban"/>
        <field name="context">{'search_default_available': 1}</field>
        <field name="search_view_id" ref="view_estate_property_search"/>
    </record>
</odoo>