<odoo>

    <!-- Tree View -->
    <record id="view_estate_property_offer_tree" model="ir.ui.view">
        <field name="name">estate.property.offer.tree</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree>
                <field name="price"/>
                <field name="partner_id"/>
                <field name="property_id"/>
                <field name="validity"/>
                <field name="date_deadline"/>
                <field decoration-success="status == 'accepted'" decoration-danger="status == 'refused'" name="status"/>

            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_estate_property_offer_form" model="ir.ui.view">
        <field name="name">estate.property.offer.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="col-4">
                        <group>
                            <field name="price"/>
                            <field name="partner_id"/>
                            <field name="property_id"/>
                        </group>
                    </div>
                    <div class="col-4">
                        <group>
                            <field name="status"/>
                            <field name="validity"/>
                            <field name="date_deadline"/>
                        </group>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Window Action -->
    <record id="action_estate_property_offer" model="ir.actions.act_window">
        <field name="name">Estate Property offer</field>
        <field name="res_model">estate.property.offer</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_estate_property_offer_tree"/>
    </record>
</odoo>